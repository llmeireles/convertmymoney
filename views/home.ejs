<%- include('header')%>
<div class="col-md-4 order-md-2 mb-4">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Cálculo</span>
    </h4>
    <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between lh-condensed">
          <div>
            <h6 class="my-0">Valor</h6>
            <small class="text-muted">R$</small>
          </div>
          <span id="conversao" class="text-muted"> 
                 <% if (conversao) { %>
                      <%= conversao %>
                   <% } %>
            </span>
        </li>
      </ul>
</div>
<div class="col-md-8 order-md-1">
    <h4 class="mb-3">Parâmetros</h4>
    <form class="needs-validation" id="frmCotacao" action="#" >
 
        <div class="mb-3">
            <label for="cotacao"> Cotação $</label>
            <input id="cotacao" name="cotacao" class="form-control" placeholder="Cotação Dolar" value="<%=cotacao%>"/>
        </div>
        <div class="mb-3">
            <label for="quantidade">Quantidade</label>                       
            <input id="quantidade" name="quantidade" class="form-control" placeholder="Quantidade Dolares" type="text" value="<%=quantidade%>"/>            
        </div>
    </form>
    <hr class="mb-4"/>
        <button id="converter" class="btn btn-secondary btn-lg btn-block" type="submit">Converter</button>
</div>


     
<%- include('footer')%>